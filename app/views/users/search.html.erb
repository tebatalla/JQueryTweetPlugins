<h1>Search!</h1>

<div class="users-search">
  <input type="text" name="username">
  <ul class="users">
  </ul>
</div>



<ul>
  <% @users.each do |user| %>
    <li>
      <%= link_to user.username, user_url(user) %>
      <%= render "follows/form", user: user %>
    </li>
  <% end %>
</ul>

<script charset="utf-8">
  $(function () {
    $(".users-search").usersSearch();
  });

  $(function () {
    $(".follow-toggle").followToggle();
  });
</script>
